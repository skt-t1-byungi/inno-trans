{
    "name": "inno-trans",
    "description": "simple localization library (inspired by laravel translation)",
    "version": "2.2.0-beta2",
    "main": "lib/index.js",
    "module": "dist/index.esm.js",
    "unpkg": "dist/index.umd-min.js",
    "types": "lib/index.d.ts",
    "author": {
        "name": "skt-t1-byungi",
        "email": "tiniwz@gmail.com"
    },
    "keywords": [
        "i18n",
        "translation",
        "localization",
        "localize",
        "globalize"
    ],
    "files": [
        "lib",
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/skt-t1-byungi/inno-trans.git"
    },
    "license": "MIT",
    "scripts": {
        "test": "ava",
        "prepublishOnly": "npm run build",
        "clean": "rm -rf dist/ lib/ ",
        "build": "npm run clean && tsc & bili lib/index.js --format esm,umd --module-name InnoTrans --bundle-node-modules"
    },
    "devDependencies": {
        "@types/node": "^11.13.4",
        "ava": "^1.0.1",
        "bili": "^4.7.3",
        "ts-node": "^8.1.0",
        "tslint": "^5.15.0",
        "tslint-config-byungi": "0.1.1",
        "typescript": "^3.4.3"
    },
    "dependencies": {
        "@byungi/event-emitter": "^1.0.5",
        "@skt-t1-byungi/array-find": "^0.2.0",
        "@skt-t1-byungi/array-map": "^0.2.0",
        "@skt-t1-byungi/array-reduce": "^0.2.1"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "compileEnhancements": false,
        "require": [
            "ts-node/register"
        ]
    }
}
